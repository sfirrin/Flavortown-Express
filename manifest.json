{
	"name": "Flavortown Express",
	"manifest_version": 2,
	"description": "Inject some flavor into your web browsing",
	"version": "1.1.0",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Take me to flavortown"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["jquery-3.2.0.min.js", "main.js", "jquery.gsap.min.js", "TweenMax.min.js",
			 	   "TimelineMax.min.js"],
			"css": ["flavortown.css"]
		}
	],
	"permissions": [
		"storage",
		"tabs",
		"https://127.0.0.1:8000/*"
	],
	"web_accessible_resources": ["guys/*", "icon.png"],
	"icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}